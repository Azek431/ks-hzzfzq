<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        animateLayoutChanges="true"
        id="toolbar"
        title="火崽崽过大年辅助 {{app.versionName}}"
        textStyle="bold"
        titleTextColor="#49454F"
        w="*" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:fadeScrollbars="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:text="悬浮窗"
                textColor="{{ThemeColor}}"
                margin="5 0 0 0" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                app:strokeColor="#6200EE"
                app:strokeWidth="2dp"
                app:contentPadding="5dp"
                margin="10 10 10 10">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/openWindow"
                    android:text="打开悬浮窗"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    margin="5 0 0 0"
                    backgroundTint="{{ThemeColor}}" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textview.MaterialTextView
                android:text="脚本测试"
                textColor="{{ThemeColor}}"
                margin="5 10 0 0" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                app:strokeColor="#6200EE"
                app:strokeWidth="2dp"
                app:contentPadding="5dp"
                margin="10 10 10 10">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <canvas
                        android:id="@+id/canvas"
                        android:layout_width="match_parent"
                        android:layout_height="350dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/scaleText"
                        android:text="缩放: 0.8"
                        margin="0 10 0 0" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/scaleSlider"
                        android:stepSize="0.01"
                        android:valueFrom="0.01"
                        android:valueTo="1.00"
                        android:value="0.80"
                        android:layout_width="314dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/selectImg"
                            android:text="选择图片"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            margin="5 0 0 0"
                            backgroundTint="{{ThemeColor}}" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/testScript"
                            android:text="测试算法"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            margin="5 0 0 0"
                            backgroundTint="{{ThemeColor}}" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/recoverImg"
                            android:text="恢复"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            margin="5 0 0 0"
                            backgroundTint="{{ThemeColor}}" />


                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textview.MaterialTextView
                android:text="参数调整"
                textColor="{{ThemeColor}}"
                margin="5 10 0 0" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                app:strokeColor="#6200EE"
                app:strokeWidth="2dp"
                app:contentPadding="5dp"
                margin="10 10 10 10">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/navigationBarSelect"
                            android:text="底部导航栏: 无"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            margin="5 0 0 0"
                            backgroundTint="{{ThemeColor}}" />

                    </LinearLayout>

                    <com.google.android.material.textview.MaterialTextView
                        android:text="提示: 如果手机系统导航模式是底部三键，那请将 底部导航栏 设为有。不然可能会导致算法计算错误、偏移等。从 v1.4.* 开始，识别不到荆棘会自动切换再识别，但你手机底部如果有三键，那你可以选择 ( 不选择会 增加计算 或 偏框 等 )"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        textColor="{{ThemeColor}}"
                        margin="5 10 0 10" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/setThornsCeneterYPps"
                        android:text="设置荆棘中心y屏幕占比"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        margin="5 0 0 0"
                        backgroundTint="{{ThemeColor}}" />

                    <com.google.android.material.textview.MaterialTextView
                        android:text="提示: 荆棘中心y屏幕占比就是: 荆棘中心y / 屏幕高度，如果出现绘制y偏移，那就可以调整这个参数。这个参数非常重要，是算法的根本，如果出现绘制y坐标偏移 那就是说明这个参数错了，请调整，不然算法就会计算错误从而失误。调整教程: 如果 绘制荆棘框 偏下，那请调低，如果偏高，那请调高。因为 y坐标 是从上往下的。"
                        android:layout_width="268dp"
                        android:layout_height="wrap_content"
                        textColor="{{ThemeColor}}"
                        margin="5 10 0 10" />


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            
            
                --> 空白控件
                <com.google.android.material.textview.MaterialTextView
                android:text=""
                margin="0 0 0 200" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>